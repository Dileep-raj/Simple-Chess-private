<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ToolBar style -->
    <style name="ToolBarStyle" parent="Widget.Material3.Toolbar">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@color/drawer_item</item>
        <item name="itemIconTint">@color/drawer_item</item>
        <item name="android:background">@color/navigation_drawer_background</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="colorPrimary">@color/translucent_75</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Text appearance -->
    <style name="TextWhite18sp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="NotoSans12sp" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="NotoSans14sp" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NotoSans16sp" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="LabelText14sp" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TruncateText" parent="@android:style/TextAppearance">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextActive" parent="@android:style/TextAppearance">
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="fontWeight">700</item>
        <item name="itemBackground">@color/translucent_25</item>
        <item name="android:itemBackground">@color/translucent_25</item>
    </style>

    <style name="TextInactive">
        <item name="itemTextColor">@color/btn_txt_color</item>
        <item name="fontWeight">400</item>
    </style>

    <!-- Divider style -->
    <style name="Divider2dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Divider1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Buttons style -->
    <style name="ImageButton40dp" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/btn_background</item>
        <item name="android:padding">6dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageButtonTransparent" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="DefaultButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Custom views style -->
    <style name="EvalBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ChessBoardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>