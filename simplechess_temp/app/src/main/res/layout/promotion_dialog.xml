<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/promote_to_queen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/promote_to_rook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/queen" />

    <ImageButton
        android:id="@+id/promote_to_rook"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/promote_to_knight"
        app:layout_constraintStart_toEndOf="@+id/promote_to_queen"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/rook" />

    <ImageButton
        android:id="@+id/promote_to_knight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/promote_to_bishop"
        app:layout_constraintStart_toEndOf="@+id/promote_to_rook"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/knight" />

    <ImageButton
        android:id="@+id/promote_to_bishop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/promote_to_knight"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/bishop" />

</androidx.constraintlayout.widget.ConstraintLayout>